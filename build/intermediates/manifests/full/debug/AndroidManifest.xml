<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaobai.lanya"
    android:versionCode="2"
    android:versionName="2.5" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name="com.xiaobai.lanya.view.LoginMainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" >
        android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xiaobai.lanya.view.ZhuceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_zhuce"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xiaobai.lanya.view.ForgetActivity"
            android:label="@string/title_activity_forget" >
        </activity>
        <activity
            android:name="com.xiaobai.lanya.view.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xiaobai.lanya.view.LanyaFragment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_lanya_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xiaobai.lanya.view.GonggaolanFragment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_gonggaolan_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.xiaobai.lanya.view.SetFragment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_set_fragment"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>