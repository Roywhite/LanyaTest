<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/relative_round">

        <TextView android:id="@+id/book_friend_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"
            android:text="NO.account"/>

        <ImageView
            android:id="@+id/book_friend_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/game_disc" />

        <TextView
            android:id="@+id/book_friend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_friend_iv"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/book_friend_iv"
            android:text="小白:推荐了《为你奋斗》"
            android:textColor="#f59152"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_friend_neirong"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_below="@+id/book_friend_title"
            android:layout_alignLeft="@+id/book_friend_title"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/textview_round"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="评语：点击查看详情"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>