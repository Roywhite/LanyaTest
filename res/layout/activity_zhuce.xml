<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <EditText
            android:id="@+id/zhuce_et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_centerHorizontal="true"
            android:hint="请输入账号（小于等于7位）"
            android:inputType="number"/>

        <EditText
            android:id="@+id/zhuce_et_name_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhuce_et_name"
            android:ems="15"
            android:layout_centerHorizontal="true"
            android:hint="请输入昵称"
            android:layout_marginTop="10dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/zhuce_et_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhuce_et_name_two"
            android:ems="15"
            android:layout_centerHorizontal="true"
            android:hint="请输入密码"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/zhuce_et_againPasswd"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhuce_et_passwd"
            android:ems="15"
            android:hint="请再次输入密码"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"/>
        
        <EditText
            android:id="@+id/zhuce_et_phone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhuce_et_againPasswd"
            android:ems="15"
            android:layout_marginTop="10dp"
            android:hint="请输入密保标记(用于取回密码)"
            android:inputType="number"/>
        
        <Button
            android:id="@+id/zhuce_bn_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhuce_et_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="注册" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/zhuce_tv_forgetpasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="|" />
        <TextView
            android:id="@+id/zhuce_tv_backlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="返回登录界面" />
    </LinearLayout>
	
</RelativeLayout>