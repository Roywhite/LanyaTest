<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/tuijian_num"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#c1e96363"
        android:layout_marginTop="17dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="19dp"
        />
    <TextView
        android:id="@+id/tuijian_tv_bookname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:gravity="center"
        android:layout_marginTop="17dp"
        android:background="#c191c2e6"
        android:text="测试"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15dp"
        />
    <TextView android:id="@+id/tuijian_tv_score"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#c176e4a6"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:text="90"
        android:textStyle="bold"
        android:textColor="#ff4242"
        android:textSize="19dp"
        android:gravity="center"
        android:layout_marginTop="17dp"/>
</RelativeLayout>