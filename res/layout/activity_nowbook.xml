<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:id="@+id/nowbook_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nowbook_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="书籍名：" />

            <TextView
                android:id="@+id/nowbook_nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/nowbook_name"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nowbook_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nowbook_1">

            <TextView android:id="@+id/nowbook_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="剩余时间：" />

            <TextView
                android:id="@+id/nowbook_timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/nowbook_time"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:text="" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nowbook_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nowbook_2">

            <TextView android:id="@+id/nowbook_bookstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="租借店面：" />

            <TextView
                android:id="@+id/nowbook_nowbookstoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/nowbook_bookstore"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nowbook_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nowbook_3">

            <TextView
                android:id="@+id/nowbook_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="详细地址：" />
            <TextView
                android:id="@+id/nowbook_locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/nowbook_location"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:text="" />
        </RelativeLayout>

        <TextView android:id="@+id/nowbook_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nowbook_4"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="书本简介：" />

        <TextView android:id="@+id/nowbook_bookText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nowbook_book"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_border"
            android:text="" />
    </RelativeLayout>
</RelativeLayout>