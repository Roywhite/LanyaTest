<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    android:background="#B3B3B3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="2dp"
        android:background="#E8E8E8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/youhua_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/game_disc" />

        <TextView
            android:id="@+id/youhua_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="小白"
            android:textSize="40dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:fadingEdge="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:background="#E8E8E8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/youhua_person_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="#E8E8E8"
            android:gravity="center"
            android:text="修改个人信息"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/youhua_sendBack"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="#E8E8E8"
            android:gravity="center"
            android:text="应用反馈"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/youhua_Help"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="#E8E8E8"
            android:gravity="center"
            android:text="自助服务"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/youhua_version"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="#E8E8E8"
            android:gravity="center"
            android:text="版本号"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/youhua_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:background="#E8E8E8"
            android:gravity="center"
            android:text="退出登录"
            android:textSize="19dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
