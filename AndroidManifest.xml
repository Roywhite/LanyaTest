<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaobai.bookStore"
    android:versionCode="3"
    android:versionName="3.1">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autoFocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 上面是扫码的 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bookstore"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name=".view.LoginMainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait">
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ZhuceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_zhuce"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ForgetActivity"
            android:label="@string/title_activity_forget" />
        <activity
            android:name=".view.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.HomeFragment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_home_fragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ReturnBookFragment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_returnbook_fragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.TuijianFragment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_zone_fragment"
            android:screenOrientation="portrait" />
        <activity android:name=".view.SearchActivity" />
        <activity android:name=".view.EditPersonActivity" />
        <activity android:name=".view.EditNameActivity" />
        <activity android:name=".view.EditPasswdActivity" />
        <activity android:name=".view.ServerYourelfActivity" />
        <activity android:name=".view.BuyScoreActivity" />
        <activity android:name=".view.NowBookActivity" />
        <activity android:name=".view.HistoryBookActivity" />
        <activity android:name=".view.ChooseStoreDialogActivity" />
        <activity android:name=".view.RentBookActivity" />
        <activity android:name=".view.RentBookTwoWeiPicActivity" />
        <activity android:name=".view.BookFriendTalkFragment" />
        <activity android:name=".view.AddTalkActivity"></activity>
    </application>

</manifest>